]

exts_list = [
    ('nvidia-ml-py', version, {
        'modulename': 'pynvml',
        'checksums': ['8184d1be52914ac7f0991cd1c0d946c65dc88a840c754cd12c274b77b88760dd'],
    }),
]

moduleclass = 'tools'
